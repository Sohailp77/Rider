<!-- res/drawable/rounded_edit_text_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background -->
    <item android:top="2dp" android:left="2dp" android:right="2dp">
        <shape android:shape="rectangle">
            <solid android:color="#2B2B2B" />
            <corners android:radius="12dp" /> <!-- Adjust the radius to control the roundness -->
        </shape>
    </item>

    <!-- Border -->
    <item android:top="1dp" android:left="-1dp" android:right="-1dp">
        <shape android:shape="rectangle">
            <solid android:color="#2B2B2B" />
            <corners android:radius="8dp" /> <!-- Adjust the radius to control the roundness -->
            <stroke android:width="1dp" android:color="#FFFFFF" />
        </shape>
    </item>

    <!-- Underline -->
    <item android:bottom="1dp" android:left="-1dp" android:right="-1dp">
        <shape android:shape="rectangle">
            <solid android:color="#2B2B2B" />
            <corners android:radius="12dp" /> <!-- Adjust the radius to control the roundness -->
            <stroke android:width="1dp" android:color="#FFFFFF" />
        </shape>
    </item>

</layer-list>
